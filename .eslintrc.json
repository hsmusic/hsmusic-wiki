{
  "env": {
    "es2021": true,
    "node": true
  },
  "plugins": ["compat"],
  "extends": [
    "eslint:recommended",
    "plugin:compat/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "indent": ["off"],
    "no-unexpected-multiline": ["off"],
    "no-unused-labels": ["off"],
    "no-unused-vars": ["error", {
      "argsIgnorePattern": "^_",
      "destructuredArrayIgnorePattern": "^"
    }],
    "no-cond-assign": ["off"]
  }
}
